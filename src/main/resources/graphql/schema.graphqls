type Book{
    id: ID!,
    name: String!,
    author: Author!,
    status: String!
}

type Author{
    id: ID!
    name:String!
    books: [Book]
}

type Query{
    fetchBookById(id:ID!): Book
    fetchBooks:[Book]
    fetchBooksByAuthor(id:ID!) : [Book]
}

type Mutation{
    addBook(name:String!,author:String!,status:String!):Book!
}